/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun8i-h2-plus";
};

&pio {
    rcrecv_pins: rcrecv_pins {
	allwinner,pins = "PA19";
	allwinner,function = "gpio_in";
	allwinner,pull = <1>;
    };
};

&{/soc} {
    gpiorcrecv@0 {
	compatible = "rcrecv";
	pinctrl-names = "default";
	pinctrl-0 = <&rcrecv_pins>;
	gpios = <&pio 0 19 0>;

	/* tolerance to deviations of radio pulses. Default: 60% */
	default-tolerance = <60>;

	status = "okay";
    };
};
